{{#extends "base"}}
{{#block "content"}}
<h1>Customers</h1>
<table class="table">
    <tr>
        <th>First Name</th>
        <th>Last Name</th>
        <th>Rating</th>
        <th>Company</th>
    </tr>
    {{#each customers}}
    <tr>
        <td>{{first_name}}</td>
        <td>{{last_name}}</td>
        <td>{{rating}}</td>
        <td>{{name}}</td>
         <td><a href="/customers/{{customer_id}}/edit" class="btn btn-primary btn-sm">Edit</a></td>
         <td><a href="/customers/{{customer_id}}/delete" class="btn btn-danger btn-sm">Delete</a></td>
    </tr>
    {{/each}}
</table>
<td><a href="/customers/{{customer_id}}/create" class="btn btn-primary btn-sm">Create Customer</a></td>
{{/block}}
{{/extends}}
