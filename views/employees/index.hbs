{{#extends "base"}}
{{#block "content"}}
<h1>Employees Records</h1>
<table class="table">
    <tr>
        <th>First Name</th>
        <th>Last Name</th>
        <th>Designation</th>
        <th>Department</th>
        <th>Contact No</th>
        <th>Date Joined</th>
    </tr>
    {{#each employees}}
    <tr>
        <td>{{first_name}}</td>
        <td>{{last_name}}</td>
        <td>{{designation}}</td>
        <td>{{name}}</td>
        <td>{{contact}}</td>
        <td>{{date_joined}}</td>
         <td><a href="/employees/{{employee_id}}/edit" class="btn btn-primary btn-sm">Edit</a></td>
         <td><a href="/employees/{{employee_id}}/delete" class="btn btn-danger btn-sm">Delete</a></td>
    </tr>
    {{/each}}
</table>
<td><a href="/employees/{{employee_id}}/create" class="btn btn-primary btn-sm">Create Employee Record</a></td>
{{/block}}
{{/extends}}

